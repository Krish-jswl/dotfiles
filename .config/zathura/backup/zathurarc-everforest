# Font
#set font "monospace 10"

# Colors (Everforest Dark - hard contrast)
set default-bg      "#2b3339"  # background
set default-fg      "#d3c6aa"  # foreground (text)

# UI Elements
set statusbar-bg    "#2b3339"
set statusbar-fg    "#a7c080"

set inputbar-bg     "#2b3339"
set inputbar-fg     "#d3c6aa"

# Highlights
set highlight-color "#7fbbb3"
set highlight-active-color "#e67e80"

# Completion
set completion-bg   "#2b3339"
set completion-fg   "#d3c6aa"
set completion-group-bg "#3c4841"
set completion-group-fg "#a7c080"
set completion-highlight-bg "#7fbbb3"
set completion-highlight-fg "#2b3339"

# Notifications
set notification-bg "#2b3339"
set notification-fg "#d3c6aa"
set notification-error-bg "#2b3339"
set notification-error-fg "#e67e80"
set notification-warning-bg "#2b3339"
set notification-warning-fg "#dbbc7f"

# Recolor (PDF background and foreground when recolor is active)
set recolor-lightcolor "#2b3339"
set recolor-darkcolor "#d3c6aa"
set recolor true

# Smooth scrolling
set smooth-scroll true

# Adjust zoom increment
set zoom-step 10

